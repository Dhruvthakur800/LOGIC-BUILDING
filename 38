#include <stdio.h>

int main() {
    int choice;
    float temp;

    printf("1. C to F\n2. F to C\nEnter choice: ");
    scanf("%d", &choice);

    printf("Enter temperature: ");
    scanf("%f", &temp);

    switch(choice) {
        case 1: printf("F = %.2f", (temp * 9/5) + 32); break;
        case 2: printf("C = %.2f", (temp - 32) * 5/9); break;
        default: printf("Invalid choice");
    }

    return 0;
}
